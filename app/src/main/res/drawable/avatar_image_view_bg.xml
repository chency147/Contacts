<?xml version="1.0" encoding="UTF-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<solid android:color="#FFFFFF"/>
			<corners android:radius="@dimen/infoAvatarHeight_half"/>
			<stroke
				android:width="1dp"
				android:color="@color/colorAvatarBackground"/>
		</shape>
	</item>
	<item
		android:bottom="1dp"
		android:left="1dp"
		android:right="1dp"
		android:top="1dp">
		<shape>
			<solid android:color="@android:color/white"/>
			<corners android:radius="@dimen/infoAvatarHeight_half"/>
			<stroke
				android:width="1dp"
				android:color="@android:color/white"/>
		</shape>
	</item>
</layer-list>