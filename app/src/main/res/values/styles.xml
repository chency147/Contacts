<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="titleBarStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/activity_title_bar_height
		</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="titleTextViewStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">@dimen/activity_horizontal_margin
		</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="titleButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">
			@drawable/tool_button_bg
		</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="searchBarStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/activity_search_bar_height
		</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">@dimen/activity_vertical_margin_half
		</item>
		<item name="android:paddingBottom">
			@dimen/activity_vertical_margin_half
		</item>
		<item name="android:paddingLeft">
			@dimen/activity_horizontal_margin_half
		</item>
		<item name="android:paddingRight">
			@dimen/activity_horizontal_margin_half
		</item>
	</style>

	<style name="searchBarButtonStyle">
		<item name="android:layout_width">@dimen/title_tool_image_button_width
		</item>
		<item name="android:layout_height">@dimen/title_tool_image_button_height
		</item>
		<item name="android:layout_marginLeft">
			@dimen/activity_horizontal_margin
		</item>
		<item name="android:background">
			@drawable/tool_button_bg
		</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="backButtonStyle">
		<item name="android:layout_width">@dimen/title_tool_image_button_width
		</item>
		<item name="android:layout_height">@dimen/title_tool_image_button_height
		</item>
		<item name="android:layout_marginLeft">
			@dimen/activity_horizontal_margin
		</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:background">
			@drawable/tool_button_bg
		</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/ic_arrow_back_white_48dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="editButtonStyle">
		<item name="android:layout_width">@dimen/search_bar_image_button_width
		</item>
		<item name="android:layout_height">@dimen/search_bar_image_button_height
		</item>
		<item name="android:layout_marginRight">
			@dimen/activity_horizontal_margin
		</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:background">
			@drawable/tool_button_bg
		</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/ic_edit_white_48dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="deleteButtonStyle">
		<item name="android:layout_width">@dimen/search_bar_image_button_width
		</item>
		<item name="android:layout_height">@dimen/search_bar_image_button_height
		</item>
		<item name="android:layout_marginRight">
			@dimen/activity_horizontal_margin
		</item>
		<item name="android:background">
			@drawable/tool_button_bg
		</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/ic_delete_white_48dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="addButtonStyle">
		<item name="android:layout_width">@dimen/addAndRemoveButtonWidth</item>
		<item name="android:layout_height">@dimen/addAndRemoveButtonHeight
		</item>
		<item name="android:background">
			@drawable/add_remove_button_bg
		</item>
		<item name="android:src">@drawable/ic_add_green_600_48dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="removeButtonStyle">
		<item name="android:layout_width">@dimen/addAndRemoveButtonWidth</item>
		<item name="android:layout_height">@dimen/addAndRemoveButtonHeight
		</item>
		<item name="android:background">
			@drawable/add_remove_button_bg
		</item>
		<item name="android:src">@drawable/ic_remove_red_600_48dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>

	<style name="alphaDialogTextViewStyle">
		<item name="android:layout_width">@dimen/alphaDialogWidth</item>
		<item name="android:layout_height">@dimen/alphaDialogHeight</item>
		<item name="android:textColor">@color/colorAlphaDialogTextColor</item>
		<item name="android:textSize">@dimen/alphaDialogTextSize</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/alpha_dialog_bg</item>
	</style>
</resources>
